{
  "name": "cesium-slm",
  "version": "1.0.0",
  "description": "Browser-based Small Language Model for controlling CesiumJS via natural language",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "asbuild:debug": "asc wasm/assembly/index.ts --target debug --outFile wasm/build/mcp.debug.wasm --textFile wasm/build/mcp.debug.wat --exportRuntime --sourceMap",
    "asbuild:release": "asc wasm/assembly/index.ts --target release --outFile wasm/build/mcp.wasm --textFile wasm/build/mcp.wat --exportRuntime --optimize",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release"
  },
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.78",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cesium": "^1.124.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "assemblyscript": "^0.27.30",
    "typescript": "^5.6.3",
    "vite": "^6.0.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
